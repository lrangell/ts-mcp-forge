{
  "name": "ts-mcp-forge",
  "version": "0.4.0",
  "description": "A TypeScript framework for building MCP (Model Context Protocol) servers with decorators",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "typescript",
    "decorators"
  ],
  "author": "Lucas Rangel",
  "license": "MIT",
  "homepage": "https://github.com/lrangell/ts-mcp-forge#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lrangell/ts-mcp-forge.git"
  },
  "bugs": {
    "url": "https://github.com/lrangell/ts-mcp-forge/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "import": "./dist/decorators/index.js"
    },
    "./core": {
      "types": "./dist/core/server.d.ts",
      "import": "./dist/core/server.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:lib",
    "build:clean": "rm -rf dist",
    "build:lib": "tsc --project tsconfig.build.json",
    "prepublishOnly": "pnpm run check && pnpm run build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint . --fix --ignore-path=.gitignore",
    "lint:nofix": "oxlint . --ignore-path=.gitignore",
    "check": "pnpm run format && pnpm run typecheck && pnpm run lint && pnpm run test:run",
    "check:ci": "pnpm run format:check && pnpm run typecheck && pnpm run lint:nofix && pnpm run test:run",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "example:calculator": "vite-node -c vite.config.ts examples/calculator/server.ts",
    "inspect:calculator": "npx @modelcontextprotocol/inspector vite-node -c vite.config.ts examples/calculator/server.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "fastify": "^5.0.0",
    "fastify-sse-v2": "^4.0.0",
    "neverthrow": "^7.0.0",
    "reflect-metadata": "^0.2.0",
    "remeda": "^2.0.0",
    "ts-pattern": "^5.8.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "^1.7.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "knip": "^5.62.0",
    "oxlint": "^1.11.1",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "typescript": "^5.6.0",
    "unplugin-swc": "^1.5.0",
    "vite": "^5.0.0",
    "vite-node": "^2.0.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
