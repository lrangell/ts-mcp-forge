{
  "name": "mcp-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite-node -c vite.config.ts --watch src/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint . --fix --ignore-path=.gitignore",
    "lint:nofix": "oxlint . --ignore-path=.gitignore",
    "check": "pnpm run format && pnpm run typecheck && pnpm run lint && pnpm run test:run",
    "check:ci": "pnpm run format:check && pnpm run typecheck && pnpm run lint:nofix && pnpm run test:run",
    "example:calculator": "vite-node -c vite.config.ts examples/calculator/server.ts",
    "inspect:calculator": "npx @modelcontextprotocol/inspector vite-node -c vite.config.ts examples/calculator/server.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "fastify": "^5.0.0",
    "fastify-sse-v2": "^4.0.0",
    "jsonrpc-lite": "^2.2.0",
    "neverthrow": "^7.0.0",
    "reflect-metadata": "^0.2.0",
    "remeda": "^2.0.0",
    "ts-pattern": "^5.8.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@swc/core": "^1.7.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "oxlint": "^1.11.1",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.6.0",
    "unplugin-swc": "^1.5.0",
    "vite": "^5.0.0",
    "vite-node": "^2.0.0",
    "vite-plugin-node": "^3.0.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
